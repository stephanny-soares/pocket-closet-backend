# Backend NestJS - Configuración de la base de datos
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_NAME=your_db_name
DB_PASSWORD=your_db_password

# Porta do backend
PORT=5000

# Ambiente
NODE_ENV=development

# Google Cloud Vision API
GOOGLE_APPLICATION_CREDENTIALS=path/to/your-google-vision-key.json
GOOGLE_CLOUD_VISION_PROJECT_ID=your_project_id

# Gemini API
GOOGLE_GEMINI_API_KEY=your_api_key_here

# Google Cloud Storage - Bucket para almacenar imágenes de prendas
GOOGLE_CLOUD_STORAGE_BUCKET=your_bucket_name_here

# Redis para cache
REDIS_URL=redis://default:your_redis_password@your_redis_host:your_port

# Anti-brute-force (segundos)
REDIS_BLOCK_DURATION=60

# Google OAuth (Expo)
EXPO_PUBLIC_GOOGLE_WEB_ID=your_web_client_id
GOOGLE_OAUTH_WEB_SECRET=your_web_secret
GOOGLE_OAUTH_ANDROID_ID=your_android_client_id

# URLs base
API_BASE=http://localhost:5000
EXPO_PUBLIC_API_BASE=http://localhost:5000/v1